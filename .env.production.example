# Database Configuration
MONGODB_ADDRESS=mongodb://mongodb:27017/biteme
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password

# Backend API Configuration
SECRET_JWT=your-very-secure-jwt-secret-at-least-32-characters
STRIPE_KEY=sk_live_your-production-stripe-key

# Admin API Configuration  
ADMIN_SECRET_KEY=your-very-secure-admin-secret-at-least-32-characters

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUD_NAME=your-cloudinary-cloud-name
API_SECRET=your-cloudinary-api-secret
API_KEY=your-cloudinary-api-key

# Frontend URLs
FRONTEND_URL=https://your-domain.com
ADMIN_FRONTEND_URL=https://admin.your-domain.com
BACKEND_URL=https://api.your-domain.com
ADMIN_BACKEND_URL=https://admin-api.your-domain.com

# SSL Configuration (for nginx)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/key.pem